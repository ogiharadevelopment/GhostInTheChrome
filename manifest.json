{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "3.1.4",
  "description": "__MSG_extDesc__",
  "default_locale": "en",
  "homepage_url": "https://github.com/ogiharadevelopment/GhostInTheChrome",
  
  "permissions": [
    "tabs",
    "storage",
    "bookmarks",
    "history",
    "sessions"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content/content.css"],
      "js": ["content/content.js"]
    }
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "options_page": "options/options.html",
  
  "action": {
    "default_title": "__MSG_actionTitle__"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content/content.js",
        "content/content.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
} 